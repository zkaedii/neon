# Environment Variables Template
# Copy this file to .env and update with your values

# Debug Mode
# Enable verbose logging and technical error details
DEBUG_MODE=false

# Output Directories
OUTPUT_DIR=./outputs
TEMP_DIR=./temp

# Server Configuration
PORT=7860
GRADIO_SHARE=false

# Queue Configuration
MAX_QUEUE_SIZE=50

# File Management
MAX_FILE_AGE_DAYS=7
MAX_FILES=50

# Model Configuration (optional)
# PREFERRED_MODEL=open-sora
# FORCE_CPU=false
# ENABLE_4BIT=true

# GPU Configuration (optional)
# CUDA_VISIBLE_DEVICES=0
# GPU_MEMORY_FRACTION=0.9

# Logging (optional)
# LOG_LEVEL=INFO
# LOG_FILE=app.log

# Security (optional)
# ALLOWED_ORIGINS=http://localhost:7860
# API_KEY=your-api-key-here
